# =============================================================================
# EXECORA .npmrc
# =============================================================================

# Package registry settings
registry=https://registry.npmjs.org/

# Enable audit for security scanning
audit=true
audit-level=moderate

# Save exact versions
save-exact=true

# Prefer offline mode
prefer-offline=false

# Progress bar
progress=true

# Always show more verbose output from npm commands
loglevel=info

# Turn on color
color=true

# Make package installs faster
package-lock=true

# Enable audit fix
audit-fix=false

# Scaffolding tools
init-author-name=EXECORA Team
init-license=MIT

# Allow unsafe permutations
allow-same-version=false

# Node.js engine requirements
engine-strict=true

# Prevents npm from picking up other .npmrc files
userconfig=~

# Enable strict SSL
strict-ssl=true

# Caution: it's currently not recommended to use `legacy-bundling`
legacy-bundling=false

# Caution: it's generally not recommended to disable `package-lock.json`
package-lock=true

# Caution: it's recommended to use `save-exact` instead of `save-prefix`
save-prefix=""

# Enable stricter parsing of the package.json during `npm install`
ignore-scripts=false

# Turn on exit functionality on uninstall failures
continue-on-failure=true

# Prevents npm from picking up other .npmrc files
ignore-workspace-root-check=false
